DROP TABLE IF EXISTS profile
DROP TABLE IF EXISTS restaurants
DROP TABLE IF EXISTS ratings
DROP TABLE IF EXISTS reviews
DROP TABLE IF EXISTS tags

CREATE TABLE profile (
profileId INT UNSIGNED AUTO_INCREMENT NOT NULL,
userName VARCHAR(128) NOT NULL,
userSalt VARCHAR(64) NOT NULL,
userHash VARCHAR(128) NOT NULL
PRIMARY KEY (profileId)
);

CREATE TABLE ratings (
restID
profileID
rateService
rateFood
rateAmbience
rateValue
);

CREATE TABLE reviews (
profileID
tagName
restID
);

CREATE TABLE tags(
tagsId INT UNSIGNED AUTO_INCREMENT NOT NULL,
tagsName VARCHAR(64)
FOREIGN KEY (profileId) REFERENCES profile(profileId),
FOREIGN KEY (restId) REFEREMCES restaurants(restId)
PRIMARY KEY (tagsId)
);

CREATE TABLE restaurants(
restName VARCHAR(128) NOT NULL
restId INT UNSIGNED AUTO_INCREMENT NOT NULL,
PRIMARY KEY (restId)
);